{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure Native",
      "type": "shell",
      "command": "cmake",
      "args": [
      "--build",
      "build"
      ],
      "group": "build",
      "problemMatcher": [
      "$gcc"
      ]
    },
    {
      "label": "CMake: Build Native",
      "type": "shell",
      "command": "cmake",
      "args": [
      ".",
      "-B",
      "build"
      ],
      "group": "build",
      "problemMatcher": [
      "$gcc"
      ]
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "rm -rf build",
      "problemMatcher": []
    }
  ]
}