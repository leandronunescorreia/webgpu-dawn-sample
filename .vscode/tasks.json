{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "rm -rf build",
      "problemMatcher": []
    },
    {
      "label": "CMake: Configure Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B", "build",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DWEBGPU_BACKEND=DAWN"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "CMake: Configure Release",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B", "build",
        "-DCMAKE_BUILD_TYPE=Release",
        "-DWEBGPU_BACKEND=DAWN"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build App Target (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build",
        "--target", "App"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build App Target (Release)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build",
        "--target", "App"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}